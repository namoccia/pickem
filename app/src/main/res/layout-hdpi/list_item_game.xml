<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="7"
    android:id="@+id/game_list_root_layout">

    <LinearLayout
        android:id="@+id/game_list_image_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/game_list_away_image"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/thumbnail"
            />

        <ImageView
            android:id="@+id/game_list_home_image"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/thumbnail"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_list_text_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:id="@+id/game_list_away_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            tools:text="AwayText"
            />

        <TextView
            android:id="@+id/game_list_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="15sp"
            tools:text="HomeText"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_list_right_side"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:layout_weight="2"
        android:weightSum="3">

        <TextView
            android:id="@+id/game_list_score_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.3"
            tools:text="ScoreText"
            android:textAlignment="viewEnd"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/game_list_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textAlignment="viewEnd"
            tools:text="TimeText"
            android:gravity="end"
            />

    </LinearLayout>


</LinearLayout>
