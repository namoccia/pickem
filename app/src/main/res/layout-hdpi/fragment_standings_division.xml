                    android:layout_weight="1"
                    android:text="@string/gp" />

                <TextView
                    android:id="@+id/winsHeading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/w" />

                <TextView
                    android:id="@+id/lossesHeading4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
