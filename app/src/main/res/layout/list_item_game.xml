<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_list_root_layout">

    <RelativeLayout
        android:id="@+id/game_list_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/game_list_away_image"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/thumbnail"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp" />

        <ImageView
            android:id="@+id/game_list_home_image"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_launcher"
            android:contentDescription="@string/thumbnail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_below="@+id/game_list_away_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/game_list_image_layout"
        android:layout_toRightOf="@id/game_list_image_layout">

        <TextView
            android:id="@+id/game_list_away_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            tools:text="AwayText"
            />

        <TextView
            android:id="@+id/game_list_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_list_away_text"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="16sp"
            tools:text="HomeText"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/game_list_right_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/game_list_text_layout"
        android:layout_toRightOf="@id/game_list_text_layout"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/game_list_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="viewEnd"
            tools:text="TimeText"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:gravity="end"
            />

        <TextView
            android:id="@+id/game_list_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.3"
            tools:text="ScoreText"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/game_list_time_text"
            />

    </RelativeLayout>


</RelativeLayout>
